DROP TABLE IF EXISTS libros;

-- 2. Crear la tabla 'libros' (versión SQLite)
CREATE TABLE libros (
    -- --- Columna de Identificación (Clave Primaria) ---
    id INTEGER PRIMARY KEY, -- Se auto-incrementa solo

    -- --- Datos Principales del Libro ---
    titulo TEXT NOT NULL,
    autor TEXT,
    descripcion TEXT,
    isbn TEXT UNIQUE,

    -- --- Datos de Publicación y Clasificación ---
    editorial TEXT,
    ano_publicacion INTEGER,
    numero_paginas INTEGER,
    genero TEXT,
    idioma TEXT,
    formato TEXT, -- Ej: &quot;PDF&quot;, &quot;EPUB&quot;

    -- --- Campos de Gestión Interna (Panel) ---
    -- Reemplazo de ENUM:
    estado TEXT DEFAULT 'Borrador' CHECK(estado IN ('Publicado', 'Borrador', 'Oculto')),
    -- Reemplazo de BOOLEAN:
    destacado INTEGER DEFAULT 0, -- 0 = false, 1 = true

    -- --- Campos para los Archivos (BLOBs) ---

    -- Portada
    nombre_portada TEXT,
    tipo_portada TEXT,
    portada_contenido BLOB, -- Solo hay un tipo BLOB

    -- Archivo del Libro
    nombre_archivo TEXT,
    tipo_archivo TEXT,
    archivo_contenido BLOB, -- Solo hay un tipo BLOB

    -- --- Marcas de Tiempo ---
    fecha_creacion TEXT DEFAULT (DATETIME('now', 'localtime')),
    fecha_actualizacion TEXT DEFAULT (DATETIME('now', 'localtime'))
);

-- 3. Crear el TRIGGER para 'ON UPDATE' (Paso extra para SQLite)
-- Esto actualiza 'fecha_actualizacion' automáticamente cada vez que editas una fila
CREATE TRIGGER IF NOT EXISTS actualizar_fecha_modificacion
AFTER UPDATE ON libros
FOR EACH ROW
BEGIN
    UPDATE libros
    SET fecha_actualizacion = (DATETIME('now', 'localtime'))
    WHERE id = OLD.id;
END;</sql><current_tab id="0"/></tab_sql></sqlb_project>
